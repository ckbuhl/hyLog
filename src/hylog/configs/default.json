{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - [%(levelname)-8s] %(module)s:%(lineno)03d | %(message)s",
      "datefmt": "T%H:%M:%S"
    },
    "detailed": {
      "format": "%(asctime)s [%(levelname)-8s] %(module)s %(pathname)s:%(lineno)03d | %(message)s",
      "datefmt": "%Y-%m-%dT%H:%M:%S%z"
    },
    "json": {
      "()": "formatters.JSONFormatter",
      "fmt_keys": {
        "level": "levelname",
        "message": "message",
        "timestamp": "timestamp",
        "logger": "name",
        "module": "module",
        "function": "funcName",
        "line": "lineno",
        "thread_name": "threadName"
      }
    }
  },
  "handlers": {
    "stdout": {
      "class": "logging.StreamHandler",
      "formatter": "simple",
      "level": "WARNING",
      "stream": "ext://sys.stderr"
    },
    "file_last": {
      "class": "logging.FileHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "filename": "logs/last.log",
      "mode": "w"
    },
    "file_rotating": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "filename": "logs/rotating.log",
      "maxBytes": 3000000,
      "backupCount": 3
    },
    "json": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "logs/json_log.jsonl",
      "maxBytes": 3000000,
      "backupCount": 3
    },
    "queue_handler": {
      "class": "logging.handlers.QueueHandler",
      "handlers": ["stdout", "file_rotating", "file_last", "json"],
      "respect_handler_level": true
    }
  },

  "loggers": {
    "root": {
      "handlers": ["queue_handler"],
      "level": "DEBUG"
    }
  }
}
