{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
  },
  "handlers": {
    "stderr": {
      "class": "logging.StreamHandler",
      "formatter": "simple",
      "level": "WARNING",
      "stream": "ext://sys.stderr"
    }
  },
  "file": {
    "class": "logging.handlers.RotatingFileHandler",
    "level": "DEBUG",
    "formatter": "simple",
    "filename": "logs/my_app.log",
    "maxBytes": 3000000,
    "backupCount": 3
  },
  "loggers": {
    "root": {
      "handlers": ["stdout"],
      "level": "DEBUG"
    }
  }
}
